    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <finalName>${project.name}-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
                <version>3.8.1</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <source>11</source>
                    <links>
                        <link>https://hub.spigotmc.org/javadocs/spigot/</link>
                        <link>https://commons.apache.org/proper/commons-lang/javadocs/api-2.6</link>
                    </links>
                    <excludePackageNames>*.listeners.*:*.listeners;*.tasks.*:*.tasks;*.commands:*.metrics</excludePackageNames>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <targetPath>.</targetPath>
                <includes>
                    <include>plugin.yml</include>
                    <include>config.yml</include>
                    <include>items.yml</include>
                    <include>data.yml</include>
                    <include>lang_CN.yml</include>
                    <include>lang_EN.yml</include>
                    <include>lang_TW.yml</include>
                </includes>
            </resource>
        </resources>
    </build>

